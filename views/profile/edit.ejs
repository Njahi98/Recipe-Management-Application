<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>

    <div class="edit-profile-container">
      <h1>Edit Profile</h1>
      <form action="/profile/<%= profile._id %>" method="POST">
        <div class="form-group">
          <label for="bio">Bio</label>
          <textarea id="bio" name="bio" rows="4"><%= profile.bio %></textarea>
        </div>
        <div class="form-group">
          <label for="profilePicture">Profile Picture URL</label>
          <input
            type="text"
            id="profilePicture"
            name="profilePicture"
            value="<%= profile.profilePicture %>"
          />
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input
            type="text"
            id="location"
            name="location"
            value="<%= profile.location %>"
          />
        </div>
        <div class="form-group">
          <label for="website">Website</label>
          <input
            type="text"
            id="website"
            name="website"
            value="<%= profile.website %>"
          />
        </div>
        <div class="form-group">
          <label for="twitter">Twitter</label>
          <input
            type="text"
            id="twitter"
            name="twitter"
            value="<%= profile.socialMedia.twitter %>"
          />
        </div>
        <div class="form-group">
          <label for="instagram">Instagram</label>
          <input
            type="text"
            id="instagram"
            name="instagram"
            value="<%= profile.socialMedia.instagram %>"
          />
        </div>
        <div class="form-group">
          <label for="facebook">Facebook</label>
          <input
            type="text"
            id="facebook"
            name="facebook"
            value="<%= profile.socialMedia.facebook %>"
          />
        </div>
        <button type="submit" class="save-btn">Save Changes</button>
      </form>
    </div>

    <%- include('../partials/footer.ejs') %>
    <script>
      const form = document.querySelector(".edit-profile-container form");
      const inputs = form.querySelectorAll("textarea, input");

      form.addEventListener("submit", async function (e) {
        e.preventDefault();
        try {
            const formData = {
          bio: form.bio.value,
          profilePicture: form.profilePicture.value,
          location: form.location.value,
          website: form.website.value,
          socialMedia: {
            twitter: form.twitter.value,
            instagram: form.instagram.value,
            facebook: form.facebook.value,
          },
        };
        const response = await fetch("/profile/<%= profile._id %>", {
          method:"PUT",
          headers: {'content-type':'application/json',            
          },
          body:JSON.stringify(formData),
        });
        if(response.ok){
         window.location.href="/profile/<%= profile._id %>"
        }
        } catch (error) {
            console.log(error);
        }

        
      });
    </script>
  </body>
</html>
